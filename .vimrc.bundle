set nocompatible
filetype off
set rtp+=~/.vim/bundle/Vundle.vim

call vundle#begin()
"-----------------------------------------------------------------
" base
"-----------------------------------------------------------------
" plugin manager
Plugin 'VundleVim/Vundle.vim'

" ステータスラインの表示内容強化
Plugin 'itchyny/lightline.vim'

" 末尾の全角と半角の空白文字を赤くハイライト
Plugin 'bronson/vim-trailing-whitespace'

call vundle#end()

filetype plugin indent on
